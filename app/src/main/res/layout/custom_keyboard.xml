<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="400dp"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:background="#e1e1e1"
                android:id="@+id/l1"
                android:layout_margin="5dp"
                android:clickable="true"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:padding="10dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_gravity="center"

                    android:layout_width="wrap_content"
                    android:text="1"
                    android:textColor="@android:color/black"

                    android:textSize="18sp"
                    android:gravity="start"
                    android:textStyle="bold"

                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:layout_margin="5dp"
                android:padding="10dp"
                android:id="@+id/l2"

                android:layout_weight="1"
                android:gravity="center"
                android:background="#e1e1e1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_gravity="center"
                    android:textColor="@android:color/black"

                    android:layout_width="wrap_content"
                    android:text="2"

                    android:textSize="18sp"
                    android:gravity="start"
                    android:textStyle="bold"

                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_margin="5dp"
                android:padding="10dp"
                android:id="@+id/l3"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#e1e1e1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_gravity="center"

                    android:layout_width="wrap_content"
                    android:text="3"
                    android:textColor="@android:color/black"

                    android:textSize="18sp"
                    android:gravity="start"
                    android:textStyle="bold"

                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:padding="10dp"
                android:background="#e1e1e1"
                android:layout_margin="5dp"
                android:clickable="true"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:id="@+id/l4"

                android:layout_height="wrap_content">


                <TextView
                    android:layout_gravity="center"

                    android:layout_width="wrap_content"
                    android:text="4"
                    android:textColor="@android:color/black"

                    android:textSize="18sp"
                    android:gravity="start"
                    android:textStyle="bold"

                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:background="#e1e1e1"
                android:layout_margin="5dp"
                android:clickable="true"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:padding="10dp"
                android:id="@+id/l5"

                android:layout_height="wrap_content">


                <TextView
                    android:layout_gravity="center"
                    android:textColor="@android:color/black"

                    android:layout_width="wrap_content"
                    android:text="5"

                    android:textSize="18sp"
                    android:gravity="start"
                    android:textStyle="bold"

                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_margin="5dp"
                android:padding="10dp"
                android:id="@+id/l6"

                android:layout_weight="1"
                android:gravity="center"
                android:background="#e1e1e1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_gravity="center"

                    android:layout_width="wrap_content"
                    android:text="6"

                    android:textSize="18sp"
                    android:gravity="start"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"

                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:background="#e1e1e1"
                android:layout_margin="5dp"
                android:clickable="true"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:padding="10dp"
                android:id="@+id/l7"

                android:layout_height="wrap_content">


                <TextView
                    android:layout_gravity="center"

                    android:layout_width="wrap_content"
                    android:text="7"

                    android:textSize="18sp"
                    android:gravity="start"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"

                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l8"

                android:layout_margin="5dp"
                android:clickable="true"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:padding="10dp"
                android:background="#e1e1e1"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_gravity="center"

                    android:layout_width="wrap_content"
                    android:text="8"

                    android:textSize="18sp"
                    android:gravity="start"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"

                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_margin="5dp"
                android:padding="10dp"
                android:id="@+id/l9"

                android:layout_weight="1"
                android:gravity="center"
                android:background="#e1e1e1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_gravity="center"

                    android:layout_width="wrap_content"
                    android:text="9"

                    android:textSize="18sp"
                    android:gravity="start"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"

                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:id="@+id/dot"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="#e1e1e1"

                android:layout_height="match_parent">

                <TextView
                    android:textSize="20sp"
                    android:gravity="center"
                    android:text="."
                    android:textStyle="bold"
                    android:textColor="@android:color/black"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>



            </LinearLayout>




            <LinearLayout
                android:layout_margin="5dp"
                android:padding="10dp"
                android:id="@+id/l0"

                android:layout_weight="1"
                android:gravity="center"
                android:background="#e1e1e1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_gravity="center"

                    android:layout_width="wrap_content"
                    android:text="0"

                    android:textSize="18sp"
                    android:gravity="start"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"

                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/back"
                android:background="@android:color/white"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:tint="@android:color/black"
                    android:src="@drawable/back"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>



            </LinearLayout>

        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >




            <LinearLayout
                android:background="@android:color/darker_gray"
                android:id="@+id/clear"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:padding="5dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_height="match_parent">


                <TextView
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:text="Clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>





            </LinearLayout>

            <LinearLayout
                android:background="#e1e1e1"
                android:id="@+id/Zero"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:padding="5dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_height="match_parent">


                <TextView
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:text="00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>





            </LinearLayout>
            <LinearLayout
                android:background="@android:color/darker_gray"
                android:id="@+id/next"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:padding="5dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_height="match_parent">


                <TextView
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:text="Next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>





            </LinearLayout>

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:background="@android:color/holo_red_light"
                android:id="@+id/done"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:padding="5dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_height="match_parent">


                <TextView
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:text="OK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>





            </LinearLayout>

        </LinearLayout>



    </LinearLayout>



</LinearLayout>