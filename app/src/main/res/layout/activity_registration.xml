<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".UI.Registration">



    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/vector"
        android:layout_weight=".7"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <TextView
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:text="Techmeq"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>


<!--        <TextView-->
<!--            android:gravity="center"-->
<!--            android:textSize="20sp"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:textColor="@android:color/white"-->
<!--            android:text="Enter your username and password to continue "-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content">-->

<!--        </TextView>-->

    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_weight="1"
        android:fillViewport="true"
        android:layout_width="0dp"
        android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




                <TextView
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:text="Registration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/cnameHint"
            android:layout_marginTop="10dp"
            android:textColorHint="@android:color/darker_gray"
            android:padding="5dp"
            app:errorEnabled="true"
            android:layout_width="300sp"
            android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:layout_marginTop="50sp"

            android:imeOptions="actionNext"
            android:inputType="text"
            android:textColor="@android:color/darker_gray"
            android:hint="Company Name"
            android:id="@+id/Cpname"
            android:padding="10dp"
            android:layout_width="300sp"
            android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:textColorHint="@android:color/darker_gray"
            android:padding="5dp"
            app:hintEnabled="true"
            android:id="@+id/cpersonHint"

            android:layout_width="300sp"
            android:layout_height="wrap_content">


        <android.support.design.widget.TextInputEditText
            android:layout_marginTop="20sp"

            android:imeOptions="actionNext"
            android:inputType="text"
            android:textColor="@android:color/darker_gray"
            android:hint="Contact Person"
            android:id="@+id/cperson"
            android:padding="10dp"
            android:layout_width="300sp"
            android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:textColorHint="@android:color/darker_gray"
            android:padding="5dp"
            android:id="@+id/mobHint"

            app:errorEnabled="true"
            android:layout_width="300sp"
            android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/mob"

            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:hint="Mobile"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="@android:color/darker_gray" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="10dp"
            android:textColorHint="@android:color/darker_gray"
            android:padding="10dp"
            app:errorEnabled="true"
            android:id="@+id/emailHint"
            android:layout_width="300sp"
            android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText

            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/darker_gray"
            android:hint="Email"
            android:id="@+id/email"
            android:padding="5dp"
            android:layout_width="300sp"
            android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:textColorHint="@android:color/darker_gray"
            android:padding="5dp"
            app:errorEnabled="true"
            android:id="@+id/addressHint"

            android:layout_width="300sp"
            android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:layout_marginTop="20sp"

            android:inputType="text"
            android:textColor="@android:color/darker_gray"
            android:hint="Shop Address"
            android:id="@+id/address"
            android:padding="10dp"
            android:layout_width="300sp"
            android:layout_height="wrap_content" />

</android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:textColorHint="@android:color/darker_gray"
            android:padding="5dp"
            app:errorEnabled="true"
            android:id="@+id/trnHint"

            android:layout_width="300sp"
            android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:layout_marginTop="20sp"

            android:imeOptions="actionNext"
            android:inputType="text"
            android:textColor="@android:color/darker_gray"
            android:hint="TRN Number"
            android:id="@+id/trn"
            android:padding="10dp"
            android:layout_width="300sp"
            android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:textColorHint="@android:color/darker_gray"
            android:padding="5dp"
            app:errorEnabled="true"
            android:id="@+id/unameHint"

            android:layout_width="300sp"
            android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:layout_marginTop="20sp"

            android:imeOptions="actionNext"
            android:inputType="text"
            android:textColor="@android:color/darker_gray"
            android:hint="Username"
            android:id="@+id/username"
            android:padding="10dp"
            android:layout_width="300sp"
            android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:textColorHint="@android:color/darker_gray"
            android:padding="5dp"
            app:errorEnabled="true"
            android:id="@+id/pwordHint"

            android:layout_width="300sp"
            android:layout_height="wrap_content">


        <android.support.design.widget.TextInputEditText
            android:layout_marginTop="20dp"

            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:textColor="@android:color/darker_gray"
            android:hint="Password"
            android:id="@+id/pword"
            android:padding="10dp"
            android:layout_width="300sp"
            android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>


        <LinearLayout
            android:id="@+id/reg"
            android:background="@drawable/button"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:padding="5dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:text="Register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>



    </LinearLayout>

    </android.support.v4.widget.NestedScrollView>



</LinearLayout>