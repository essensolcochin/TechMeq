<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".DialogFragments._AddProductDetailsDailog">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:elevation="5dp"
        android:background="@drawable/gradienttoolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:text="Select Sale Items"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:tint="@android:color/white"
                android:id="@+id/close"
                android:src="@drawable/close"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

        </RelativeLayout>


    </android.support.v7.widget.Toolbar>


        <LinearLayout
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:background="@android:color/white"
                android:orientation="vertical"
                android:layout_weight=".8"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:background="#e1e1e1"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

<!--                    <TextView-->
<!--                        android:layout_weight=".4"-->
<!--                        android:layout_width="0dp"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginStart="10dp"-->
<!--                        android:layout_marginLeft="10dp"-->
<!--                        android:text="Category"-->
<!--                        android:textColor="@android:color/black"-->
<!--                        android:textSize="14sp" />-->

                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/editbgm"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="0dp"
                        android:layout_height="30dp">

                        <Spinner
                            android:id="@+id/category"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>



                    <EditText
                        android:layout_weight="1"
                        android:inputType="text"
                        android:drawableLeft="@drawable/search"
                        android:drawableStart="@drawable/search"
                        android:drawableTint="@android:color/black"
                        android:id="@+id/search"
                        android:imeOptions="flagNoExtractUi|actionSearch"
                        android:hint="Search items"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@android:color/white"

                        android:layout_width="0dp"
                        android:layout_height="30dp"/>



                </LinearLayout>

                <LinearLayout
                    android:background="#e1e1e1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                </LinearLayout>



                <android.support.v7.widget.RecyclerView
                    android:orientation="vertical"
                    android:id="@+id/products"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>



            </LinearLayout>
    <LinearLayout
        android:background="#e1e1e1"
        android:orientation="vertical"
        android:layout_weight=".01"
        android:layout_width="0dp"
        android:layout_height="match_parent">
    </LinearLayout>


            <LinearLayout
                android:background="@drawable/cal"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">


                <LinearLayout
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:id="@+id/productname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="Quantity"
                            android:layout_weight="1" />


                        <TextView
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_width="0dp"
                            android:gravity="start"
                            android:text="Rate"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_width="0dp"
                            android:gravity="start"
                            android:text="Vat Amt"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />


                        <TextView
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_width="0dp"
                            android:gravity="start"
                            android:text="Total"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:maxLines="1"
                            android:id="@+id/qty"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:hint="0"
                            android:background="@drawable/selector"
                            android:gravity="center"
                            android:padding="10dp" />


                        <TextView
                            android:maxLines="1"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:padding="10dp"
                            android:background="@drawable/selector"
                            android:id="@+id/rate"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:hint="0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            />

                        <TextView
                            android:maxLines="1"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:padding="10dp"
                            android:background="@drawable/selector"
                            android:id="@+id/vat"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:hint="0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            />


                        <TextView
                            android:maxLines="1"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:padding="10dp"
                            android:background="@drawable/selector"
                            android:id="@+id/total"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:hint="0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                    </LinearLayout>



                </LinearLayout>


<!--                <EditText-->
<!--                    android:layout_gravity="center"-->
<!--                    android:id="@+id/input"-->
<!--                    android:padding="5dp"-->
<!--                    android:background="@drawable/rounded"-->
<!--                    android:layout_margin="5dp"-->
<!--                    android:layout_width="300dp"-->
<!--                    android:layout_height="wrap_content"/>-->




                <include
                    android:id="@+id/keyboard"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    layout="@layout/custom_keyboard" />


            </LinearLayout>



        </LinearLayout>




<!--    </ScrollView>-->





